<?xml version="1.0"?>
<project name="key.core.testgen" default="deploy" basedir=".">
	<property name="src.dir"   value="${basedir}/src" />
	<property name="build.dir" value="${basedir}/bin" />
	<property name="lib.dir" value="${basedir}/../key.core/lib"/>
	<property name="dist.dir"  value="${basedir}/../deployment" />

	<target name="deploy" depends="compile" description="Create a JAR archive in the destination directory.">
	        <mkdir dir="${dist.dir}"/>
	  	<mkdir dir="${dist.dir}/components"/>
		<jar destfile="${dist.dir}/components/key.core.testgen.jar" basedir="${build.dir}" manifest="${basedir}/META-INF/MANIFEST.MF" />
	</target>

	<target name="copy" description="Copy all resources into the binary directory.">
		<mkdir dir="${build.dir}" />
		<copy todir="${build.dir}/META-INF">
			<fileset dir="${basedir}/META-INF/"/>
		</copy>
	</target>

	<target name="compile" depends="copy" description="Compile all source files into the build directory.">
		<javac srcdir= "${src.dir}" 
		       destdir="${build.dir}" 
		       sourcepath="${src.dir}" 
		       includeantruntime="false" 
		       source="1.8" 
		       target="1.8"
		       deprecation="off" 
		       debug="on" 
		       depend="${build.depend}" 
		       optimize="off">
			<classpath>
				<pathelement path="${basedir}/../key.core/bin/"/>
				<pathelement path="${basedir}/../key.util/bin/"/>
				<pathelement location="${lib.dir}/antlr.jar"/>
				<pathelement location="${lib.dir}/recoderKey.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="clean" description="Deletes all generated files and folders.">
		<delete failonerror="false" includeemptydirs="true"> 
			<fileset dir="${build.dir}" includes="**/*" />
			<fileset file="${dist.dir}/components/key.core.testgen.jar" />
		</delete>
	</target>
</project>
